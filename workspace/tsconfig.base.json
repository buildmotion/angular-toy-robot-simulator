{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@buildmotion/error-handler": ["libs/shared/error-handler/src/index.ts"],
      "@buildmotion/logger": ["libs/shared/logger/src/index.ts"],
      "@buildmotion/robot-toy-components": ["libs/toy-robot-components/src/index.ts"],
      "@buildmotion/toy-robot-service": ["libs/toy-robot-service/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
